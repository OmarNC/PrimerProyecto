<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ejerciciofinal.ViewDataActivity">

    <TextView
        android:id="@+id/txvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:text="Nombre"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/txvApellido"
        android:text="Apellido"
        android:textSize="30sp"

        android:layout_below = "@+id/txvNombre"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txvIMC"
        android:text="IMC: "
        android:textSize="45sp"

        android:layout_marginTop="20dp"
        android:layout_below = "@+id/txvApellido"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txvMensaje"
        android:text="Mensaje: "
        android:textSize="24sp"

        android:layout_marginTop="20dp"
        android:layout_below = "@+id/txvIMC"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>